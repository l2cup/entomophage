{
    "name": "entomophage",
    "version": "0.1.0",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "clean": "lerna run clean --stream --parallel",
        "build": "lerna run build --stream --parallel",
        "lint": "eslint . --ext .js,.ts,.tsx -f codeframe",
        "typecheck": "tsc --noEmit",
        "pretest": "yarn typecheck && yarn lint",
        "test": "yarn test:unit",
        "test:unit": "mocha \"packages/**/test/**/*.spec.ts?(x)\""
    },
    "author": "Uros \"l2cup\" Nikolic",
    "license": "MIT",
    "devDependencies": {
        "@ts-tools/node": "^1.1.3",
        "@types/bcrypt": "^3.0.0",
        "@types/cors": "^2.8.6",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.2",
        "@types/mongoose": "^5.7.0",
        "@types/morgan": "^1.7.37",
        "@types/node": "^13.7.0",
        "@typescript-eslint/eslint-plugin": "^2.18.0",
        "@typescript-eslint/parser": "^2.18.0",
        "eslint": "^6.8.0",
        "eslint-config-airbnb": "^18.0.1",
        "eslint-config-airbnb-typescript": "^6.3.1",
        "eslint-plugin-import": "^2.20.0",
        "jest": "^25.1.0",
        "lerna": "^3.20.2",
        "nodemon": "^2.0.2",
        "rimraf": "^3.0.2",
        "ts-jest": "^25.1.0",
        "ts-node": "^8.6.2",
        "typescript": "^3.7.5"
    },
    "private": true
}
