{
    "name": "@entomophage/users",
    "version": "1.0.0",
    "description": "Entomophage bug and issue tracker user service.",
    "main": "dist/server.js",
    "directories": {
        "test": "test"
    },
    "scripts": {
        "start": "yarn serve",
        "clean": "rimraf ./dist",
        "prebuild": "yarn clean",
        "serve": "node dist/server.js",
        "serve-watch": "nodemon dist/server.js",
        "build": "tsc -p tsconfig.build.json",
        "watch-ts": "tsc -wp tsconfig.build.json",
        "lint": "tsc --noEmit -p tsconfig.build.json && eslint \"**/*.{js,ts}\" --quiet --fix",
        "debug": "yarn build && yarn serve-debug",
        "serve-debug": "nodemon --inspect dist/server.js"
    },
    "author": "Uros 'l2cup' Nikolic",
    "license": "MIT",
    "dependencies": {
        "bcrypt": "^3.0.7",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "http-status-codes": "^1.4.0",
        "mongoose": "^5.8.11",
        "morgan": "^1.9.1",
        "package.json": "^2.0.1"
    },
    "private": true
}
